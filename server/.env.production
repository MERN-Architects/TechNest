# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.mongodb.net/technest?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=your_email@gmail.com
CONTACT_EMAIL=contact@technest.com
ADMIN_EMAIL=admin@technest.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Frontend URL (for CORS)
FRONTEND_URL=https://technest.vercel.app

# Security Configuration
CORS_ORIGIN=https://technest.vercel.app
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100 